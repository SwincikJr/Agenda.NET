@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewBag.Title = "Login";
}

<div>
        @if (TempData["message"] != null)
        {
            <div class="account-msg">@TempData["message"]</div>
        }

        <div id="login-form">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div>
                    <p class="account-p">E-mail</p>
                    <p class="account-input">@Html.TextBox("email", null, new { @class = "account-input-editor" })</p>
                </div>

                <div style="position:relative; bottom:15px;">

                    <p class="account-p">Senha</p>
                    <p class="account-input">@Html.TextBox("passWord", null, new { @type = "password", @class = "account-input-editor" })</p>

                </div>

                <p style="text-align:center"><input class="account-button" type="submit" value="Entrar" /></p>

            }
            <div>
                <p style="text-align:center">@Html.RouteLink("Sou novo por aqui!", new { controller = "Account", action = "Novo" }, new { @class = "login-link" })</p>
                <p style="text-align:center">@Html.RouteLink("Esqueci minha senha...", new { controller = "Account", action = "RecuperarSenha" }, new { @class = "login-link" })</p>
            </div>
        </div>
    </div>